<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- classPathEntry:数据库的 JDBC驱动的jar 包地址 -->
    <classPathEntry
            location="D:\\idea\\mysql-connector-java-5.1.32.jar" />
    <context id="caigouTables" targetRuntime="MyBatis3">

        <property name="javaFileEncoding" value="UTF-8" />

        <!-- 配置生成pojo的序列化的插件，mybatis支持很多插件，这些插件都在 org.mybatis.generator.plugins包下  -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />

        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/saas"
                        userId="root"
                        password="hz13554">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!--实体类  映射文件  mapper接口-->

        <!-- targetProject:生成 POJO 类的位置 -->
        <javaModelGenerator targetPackage="com.ms.credit.pojo" targetProject="src/main/java">
            <!-- enableSubPackages:是否让schema 作为包的后缀 -->
            <property name="enableSubPackages" value="true" />
            <!-- 从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true" />
        </javaModelGenerator>


        <!-- 生成 映射文件XML文件 -->
        <sqlMapGenerator targetPackage="com.ms.credit.dao" targetProject="./src/main/resources">
            <property name="enableSubPackages" value="false" />
        </sqlMapGenerator>
        <!--生成接口-->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.ms.credit.dao"  targetProject="./src/main/java">
            <property name="enableSubPackages" value="false" />
        </javaClientGenerator>


        <!-- 指定数据库表 -->
        <table  tableName="ss_module" domainObjectName="Module" mapperName="ModuleDao"
                enableCountByExample="false" enableUpdateByExample="false"
                enableDeleteByExample="false" enableSelectByExample="true"/>

        <table  tableName="pe_role" domainObjectName="Role" mapperName="RoleDao"
                enableCountByExample="false" enableUpdateByExample="false"
                enableDeleteByExample="false" enableSelectByExample="true"/>

        <table  tableName="pe_user" domainObjectName="User" mapperName="UserDao"
                enableCountByExample="false" enableUpdateByExample="false"
                enableDeleteByExample="false" enableSelectByExample="true"/>
    </context>
</generatorConfiguration>
