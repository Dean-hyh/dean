<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- classPathEntry:数据库的 JDBC驱动的jar 包地址 -->
    <classPathEntry
            location="D:\idea\ojdbc6-12.1.0.2.0.jar" />
    <context id="caigouTables" targetRuntime="MyBatis3">

        <property name="javaFileEncoding" value="UTF-8" />

        <!-- 配置生成pojo的序列化的插件，mybatis支持很多插件，这些插件都在 org.mybatis.generator.plugins包下  -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />

        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->

        <jdbcConnection driverClass="oracle.jdbc.driver.OracleDriver"
                        connectionURL="jdbc:oracle:thin:@localhost:1521:orcl"
                        userId="scott"
                        password="Mm19920729">
            <!-- 针对oracle数据库 -->
            <property name="remarksReporting" value="true"></property>
        </jdbcConnection>

        <!--实体类  映射文件  mapper接口-->

        <!-- targetProject:生成 POJO 类的位置 -->
        <javaModelGenerator targetPackage="com.ms.credit.pojo" targetProject="src/main/java">
            <!-- enableSubPackages:是否让schema 作为包的后缀 -->
            <property name="enableSubPackages" value="true" />
            <!-- 从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true" />
        </javaModelGenerator>


        <!-- 生成 映射文件XML文件 -->
        <sqlMapGenerator targetPackage="com.ms.credit.dao" targetProject="./src/main/resources">
            <property name="enableSubPackages" value="false" />
        </sqlMapGenerator>
        <!--生成接口-->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.ms.credit.dao"  targetProject="./src/main/java">
            <property name="enableSubPackages" value="false" />
        </javaClientGenerator>


        <!-- 指定数据库表 -->
        <table  tableName="sys_demo" domainObjectName="Demo" mapperName="DemoDao"
                enableCountByExample="false" enableUpdateByExample="false"
                enableDeleteByExample="false" enableSelectByExample="true"
                selectByExampleQueryId="false"/>

        <table  tableName="sys_func" domainObjectName="Func" mapperName="FuncDao"
                enableCountByExample="false" enableUpdateByExample="false"
                enableDeleteByExample="false" enableSelectByExample="true"
                selectByExampleQueryId="false"/>

        <table  tableName="sys_menu" domainObjectName="Menu" mapperName="MenuDao"
                enableCountByExample="false" enableUpdateByExample="false"
                enableDeleteByExample="false" enableSelectByExample="true"
                selectByExampleQueryId="false"/>

        <table  tableName="sys_org" domainObjectName="Org" mapperName="OrgDao"
                enableCountByExample="false" enableUpdateByExample="false"
                enableDeleteByExample="false" enableSelectByExample="true"
                selectByExampleQueryId="false"/>

        <table  tableName="sys_perm" domainObjectName="Perm" mapperName="PermDao"
                enableCountByExample="false" enableUpdateByExample="false"
                enableDeleteByExample="false" enableSelectByExample="true"
                selectByExampleQueryId="false"/>

        <table  tableName="sys_perm_func" domainObjectName="PermFunc" mapperName="PermFuncDao"
                enableCountByExample="false" enableUpdateByExample="false"
                enableDeleteByExample="false" enableSelectByExample="true"
                selectByExampleQueryId="false"/>

        <table  tableName="sys_perm_menu" domainObjectName="PermMenu" mapperName="PermMenuDao"
                enableCountByExample="false" enableUpdateByExample="false"
                enableDeleteByExample="false" enableSelectByExample="true"
                selectByExampleQueryId="false"/>

        <table  tableName="sys_role" domainObjectName="Role" mapperName="RoleDao"
                enableCountByExample="false" enableUpdateByExample="false"
                enableDeleteByExample="false" enableSelectByExample="true"
                selectByExampleQueryId="false"/>

        <table  tableName="sys_role_perm" domainObjectName="RolePerm" mapperName="RolePermDao"
                enableCountByExample="false" enableUpdateByExample="false"
                enableDeleteByExample="false" enableSelectByExample="true"
                selectByExampleQueryId="false"/>

        <table  tableName="sys_seq_conf" domainObjectName="SeqConf" mapperName="SeqConfDao"
                enableCountByExample="false" enableUpdateByExample="false"
